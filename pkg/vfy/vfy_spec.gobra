func tokenIn(rawToken []byte, ghost tokenP perm, ghost p place.Place, ghost rid term.Term) (ghost tokenT term.Term, ghost pp place.Place) {
	tokenT := iospec.get_e_InFact_r1(p, rid)
	assume gamma(tokenT) == AbsBytes(rawToken)
	pp := iospec.get_e_InFact_placeDst(p, rid)
	inhale place.token(pp)
	return tokenT, pp
}

